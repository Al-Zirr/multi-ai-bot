# ══════════════════════════════════════
#  Telegram
# ══════════════════════════════════════
BOT_TOKEN=                    # Telegram bot token from @BotFather
TELEGRAM_API_ID=              # api_id from my.telegram.org (for Local Bot API)
TELEGRAM_API_HASH=            # api_hash from my.telegram.org
ADMIN_IDS=                    # Comma-separated Telegram user IDs (e.g. 123456,789012)
USE_LOCAL_API=false            # true = use Local Bot API server, false = Cloud API

# ══════════════════════════════════════
#  AI Models — API Keys
# ══════════════════════════════════════
OPENAI_API_KEY=               # OpenAI API key (GPT, TTS, STT, embeddings)
ANTHROPIC_API_KEY=            # Anthropic API key (Claude)
GOOGLE_AI_API_KEY=            # Google AI API key (Gemini)

# ══════════════════════════════════════
#  AI Models — Defaults
# ══════════════════════════════════════
DEFAULT_GPT_MODEL=gpt-5.2
DEFAULT_CLAUDE_MODEL=claude-opus-4-6
DEFAULT_GEMINI_MODEL=gemini-3-pro-preview
DEFAULT_MODEL=claude           # Default provider: gpt / claude / gemini

# ══════════════════════════════════════
#  Database (PostgreSQL + pgvector)
# ══════════════════════════════════════
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=multi_ai_bot
DB_PASSWORD=                   # Strong password for PostgreSQL
DB_NAME=multi_ai_bot

# ══════════════════════════════════════
#  Streaming
# ══════════════════════════════════════
STREAMING_ENABLED=true
STREAMING_UPDATE_INTERVAL=1.0  # Seconds between Telegram message edits

# ══════════════════════════════════════
#  Context Management
# ══════════════════════════════════════
MAX_CONTEXT_MESSAGES=20        # Messages in context window before summarization

# ══════════════════════════════════════
#  Web Search (Tavily)
# ══════════════════════════════════════
TAVILY_API_KEY=                # Tavily API key for web search
AUTO_SEARCH=true               # Auto-detect search queries

# ══════════════════════════════════════
#  RAG / Embeddings
# ══════════════════════════════════════
EMBEDDING_MODEL=text-embedding-3-small
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=100
RAG_TOP_K=5

# ══════════════════════════════════════
#  Voice (TTS / STT)
# ══════════════════════════════════════
TTS_VOICE_GPT=ash              # OpenAI TTS voice for GPT responses
TTS_VOICE_CLAUDE=onyx          # OpenAI TTS voice for Claude responses
TTS_VOICE_GEMINI=echo          # OpenAI TTS voice for Gemini responses

# ══════════════════════════════════════
#  Image Generation
# ══════════════════════════════════════
BFL_API_KEY=                   # Black Forest Labs API key (Flux 2 Pro)

# ══════════════════════════════════════
#  Files
# ══════════════════════════════════════
FILES_DIR=/app/files           # Directory for uploaded files (inside container)
